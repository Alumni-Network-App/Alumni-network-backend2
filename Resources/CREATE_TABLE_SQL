CREATE TABLE usertable (
    "user_id" varchar   PRIMARY KEY,
    "name" varchar   NOT NULL,
    "picture" varchar   NOT NULL,
    "status" varchar   NOT NULL,
    "bio" varchar   NOT NULL,
    "fun_fact" varchar   NOT NULL
);

CREATE TABLE "topic" (
    "topic_id" int   PRIMARY KEY,
    "name" varchar   NOT NULL,
    "description" varchar   NOT NULL
);

CREATE TABLE cont (
    "content" varchar(1000)   NOT NULL,
    "last_updated" date   NOT NULL
);

CREATE TABLE post (
    "post_id" int  PRIMARY KEY,
    "title" varchar(1000)   NOT NULL,
    "topic_id" int   NOT NULL,
    "sender_id" varchar   NOT NULL,
	"receiver_type" varchar,
	"receiver_id" int NOT NULL,
	CONSTRAINT fk_user
		FOREIGN KEY("sender_id")
			REFERENCES usertable(user_id)
)  INHERITS(cont);

CREATE TABLE "reply" (
    "reply_id" int  PRIMARY KEY,
	"reply_parent_id" int  NOT NULL,
	"sender_id" varchar NOT NULL,
	CONSTRAINT fk_user
		FOREIGN KEY("sender_id")
			REFERENCES usertable("user_id"),
	CONSTRAINT fk_post
		FOREIGN KEY("reply_parent_id")
			REFERENCES post("post_id")
) INHERITS(cont);

CREATE TABLE "group" (
    "group_id" int   PRIMARY KEY,
    "name" varchar   NOT NULL,
    "description" varchar   NOT NULL,
    "is_private" boolean   NOT NULL
);

CREATE TABLE group_member (
	"group_id" int NOT NULL,
	"user_id" varchar NOT NULL,
	CONSTRAINT fk_group
		FOREIGN KEY("group_id")
			REFERENCES "group"("group_id"),
	CONSTRAINT fk_usertable
		FOREIGN KEY("user_id")
			REFERENCES usertable("user_id")
);

CREATE TABLE "event" (
    "event_id" int   PRIMARY KEY,
    "topic_id" int   NOT NULL,
    "created_by" varchar   NOT NULL,
    "name" varchar   NOT NULL,
    "description" varchar(1000)   NOT NULL,
    "banner_img" varchar   NOT NULL,
    "start_time" date   NOT NULL,
    "end_time" date   NOT NULL
);

CREATE TABLE event_group (
	"event_id" int NOT NULL,
	"group_id" int NOT NULL,
	CONSTRAINT fk_event
		FOREIGN KEY("event_id")
			REFERENCES "event"("event_id"),
	CONSTRAINT fk_group
		FOREIGN KEY("group_id")
			REFERENCES "group"("group_id")
);

CREATE TABLE event_invite (
	"user_id" varchar NOT NULL,
	"event_id" int NOT NULL,
	CONSTRAINT fk_usertable
		FOREIGN KEY("user_id")
			REFERENCES usertable("user_id"),
	CONSTRAINT fk_event
		FOREIGN KEY("event_id")
			REFERENCES "event"("event_id")
);

CREATE TABLE topic_subscription (
	"topic_id" int NOT NULL,
	"user_id" varchar NOT NULL,
	CONSTRAINT fk_topic
		FOREIGN KEY("topic_id")
			REFERENCES "topic"("topic_id"),
	CONSTRAINT fk_usertable
		FOREIGN KEY("user_id")
			REFERENCES usertable("user_id")
);

CREATE TABLE RSVP (
    "last_updated" date   NOT NULL,
    "guest_count" int   NOT NULL,
    "user_id" varchar   NOT NULL,
    "event_id" int   NOT NULL,
	CONSTRAINT fk_usertable
		FOREIGN KEY("user_id")
			REFERENCES usertable("user_id"),
	CONSTRAINT fk_event
		FOREIGN KEY("event_id")
			REFERENCES "event"("event_id")
);